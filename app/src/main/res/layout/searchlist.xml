<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383F51"
    tools:context="com.example.andrewvalenzuela.goodsounds.MainActivity">

    <ImageView
        android:id="@+id/search_albumInList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:id="@+id/search_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/search_albumInList">

        <TextView
            android:id="@+id/search_album_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Album Title"
            android:maxLines="2"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/search_artist_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_album_list_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="1dp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:textStyle="italic"
            android:text="Artist"
            android:maxLines="2"
            android:textSize="15sp" />



    </RelativeLayout>

</RelativeLayout>