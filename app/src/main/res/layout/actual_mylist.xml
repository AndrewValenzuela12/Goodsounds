<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383F51"
    tools:context="com.example.andrewvalenzuela.goodsounds.MainActivity">


    <ImageButton
        android:id="@+id/backtoHome_bttn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickBackHome"
        app:srcCompat="?android:attr/actionModeCloseDrawable" />


    <ListView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/final_mylist_view"
        />

    <TextView
        android:id="@+id/myList_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/backtoHome_bttn1"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic"
        android:text="~ My Music ~" />

</RelativeLayout>